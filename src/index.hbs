<!DOCTYPE HTML>
<html>

  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="UTF-8">

    <title>{{secure indexTitle}}</title>

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.18/c3.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.17/d3.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.18/c3.min.js"></script>

    <script id="sap-ui-bootstrap"
      src="{{secure src}}"
      data-sap-ui-libs="sap.m"
      data-sap-ui-theme="sap_belize"
      data-sap-ui-frameOptions="deny"
      data-sap-ui-compatVersion="edge"
      data-sap-ui-bindingSyntax="complex"
      data-sap-ui-preload="async"
      data-sap-ui-resourceroots='{{secure resourceroots}}'>
    </script>

    <script>
      sap.ui.getCore().attachInit(function() {
        // init component container
        var oComponentContainer = new sap.ui.core.ComponentContainer({
          height: '100%'
        }).placeAt('content');

        // init app component and load asynchroneously
        sap.ui.component({
          name: 'app.todo',
          manifestFirst: true,
          async: true
        })
        .then(function(oComponent) {
          oComponentContainer.setComponent(oComponent)
        });
      });
    </script>
  </head>

  <body class="sapUiBody" id="content">
  </body>

</html>
